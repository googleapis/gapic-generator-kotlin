<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.experimental.examples.kotlin">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!-- Change the MAIN activity below to try out each example -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".client.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".client.MainActivityEnqueue">
        </activity>
        <activity android:name=".client.MainActivityLRO">
        </activity>
        <activity android:name=".client.MainActivityMetadata">
        </activity>
        <activity android:name=".client.MainActivityStreaming">
        </activity>
        <activity android:name=".client.MainActivityPaging">
        </activity>
        <activity android:name=".client.MainActivityInterceptor">
        </activity>
    </application>

</manifest>
